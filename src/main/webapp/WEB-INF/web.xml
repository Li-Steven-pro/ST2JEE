<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controllers.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>myInterns</servlet-name>
        <servlet-class>controllers.myInterns</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>internController</servlet-name>
        <servlet-class>controllers.internController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controllers.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>internAddController</servlet-name>
        <servlet-class>controllers.internAddController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>myInterns</servlet-name>
        <url-pattern>/intern</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>internController</servlet-name>
        <url-pattern>/interns</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>internAddController</servlet-name>
        <url-pattern>/internAddController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
